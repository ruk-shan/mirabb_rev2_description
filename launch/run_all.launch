<?xml version="1.0"?>
<launch>

    <!-- loading xacro -->
    <param name="robot_description" command="$(find xacro)/xacro $(find mirabb_rev2_description)/urdf/mirabb_rev2.xacro"/> 

    <!-- gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="verbose" value="true"/>
        <!-- <arg name="world_name" value="$(find mirabb_rev2_description)/gazebo_assets/warehouse_with_OpenTopContainer.world"/> -->
    </include>

        <!--Launch Gazebo Simulator-->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" 
    args="-urdf -param robot_description -model loadcell" output="screen"/>
     <!-- <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model mirabb_rev2 -x 20 -y 3 -z 1.27"/> -->


    <!-- loading controller -->
    <rosparam file="$(find mirabb_rev2_description)/launch/controller.yaml" command="load"/>

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="mirabb_rev2" args="joint_right_drive_wheel_to_base_position_controller joint_left_drive_wheel_to_base_position_controller joint_abb_1_to_abb_0_position_controller joint_abb_2_to_abb_1_position_controller joint_abb_3_to_abb_2_position_controller joint_abb_4_to_abb_3_position_controller joint_abb_5_to_abb_4_position_controller joint_abb_6_to_abb_5_position_controller joint_state_controller "/>
      <!-- <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="mirabb_rev2" args="joint_right_drive_wheel_to_base_position_controller joint_left_drive_wheel_to_base_position_controller joint_abb_1_to_abb_0_position_controller"/> -->

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <remap from="/joint_states" to="/mirabb_rev2/joint_states"/>
    </node>
    
    <!-- rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="true" 
    args="-d $(find mirabb_rev2_description)/launch/urdf.rviz"/>

     

</launch>    